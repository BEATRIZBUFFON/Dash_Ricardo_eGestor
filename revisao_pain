import random
n1 = random.randint(0,40)
chuva = random.randint(0,1)
def chuva_s_n(chuva):
  if chuva == 0:
    return 'Não'
  else: 
    return 'Sim'
C = chuva_s_n(chuva)
def recomendar():
  if C == 'Sim' and n1 < 20:
    return "Vista mangas longas e calça. Leve um guarda-chuva se sair de casa."
  elif C == 'Sim' and n1 > 20:
    return "Vista manga-curta e calça/bermuda. Leve um guarda-chuva."
  elif C == 'Não' and n1 < 20:
    return "Vista manga longas e calça."
  elif C == 'Não' and n1 > 20:
    return "Vista manga curta e calça/bermuda."
R = recomendar()
print(f'Temperatura: {n1}. Chuva: {C}. Recomedações: {R}.')

