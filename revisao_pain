def parouimpar(n):
  if n % 2 == 0:
    return "par"
  else:
    return "impar"

n = randint(1, 100)
print('O número', n, 'é', parouimpar(n))

contador = 1
while contador < 10:
  print(contador)
  contador = contador + 1
print('Fim')

