import random
n = random.randint(1,2) #gera um número entre 1 e 2 e armazena em n
def numero(n):
  if n == 1: # se for igual a 1
    return 'Vou fazer mais exercícios' #mostra essa mensagem
  elif n == 2: # se for igual a 2
    return 'Vou consultar o material de apoio' # mostra essa mensagem
print(numero(n))

